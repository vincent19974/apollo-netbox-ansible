/system ntp client set enabled=yes server-dns-names=ph.pool.ntp.org
/system clock set time-zone-name=Asia/Manila
/system identity set name={{ item.store_number }}
/system routerboard settings set init-delay=0s
/system scheduler add interval=25s name=port2_down on-event="/system script run Primary_down" policy=ftp,reboot,read,write,policy,test,password,sniff,sensitive start-time=startup
/system scheduler add interval=25s name=port2_up on-event="/system script run Primary_up" policy=ftp,reboot,read,write,policy,test,password,sniff,sensitive start-time=startup
/system script add name=Primary_down owner=admin policy=ftp,reboot,read,write,policy,test,password,sniff,sensitive source=" :local\_i 0; {:do {:set i (\$i + 1)} while ((\$i < 5) && ([/ping 202.60.9.2 interval=3 count=1 interface=port2]=0))};\r\n       :if (\$i=5 && [/ip route get [find comment=\"Primary Default Route\"] distance]=1) do={:log info \"Primary Link(port2) is DOWN. Using Backup Link(port2) for connectivity\"; \r\n        /ip firewall connection remove [find]\r\n        /interface ovpn-client disable ovpn-out1\r\n       :log info \"Disabling interface ovpn-out1 to reset connection\"\r\n        /delay 1\r\n        :log info \"Re-enabling interface ovpn-out1.\"\r\n        /interface ovpn-client enable ovpn-out1    \r\n       /ip route set [find comment=\"Primary(OpenVPN)\"] distance=3\r\n       /ip route set [find comment=\"Primary Default Route\" distance=1]\_distance=3\r\n:log info \"Connection Table has been reset..\"\r\n             \r\n      \r\n}"
/system script add name=Primary_up owner=admin policy=ftp,reboot,read,write,policy,test,password,sniff,sensitive source="  :local i 0; {:do {:set i (\$i + 1)} while ((\$i < 5) && ([/ping 202.60.9.2 interval=3 count=1 interface=port2]=1))}; \r\n      :if (\$i=5 && [/ip route get [find comment=\"Backup Default Route\"] distance]=2 && [/ip route get [find comment=\"Primary Default Route\"]\_distance]=3) do={:log info \"Primary Link(port2) has returned from DOWN state. Using port2 as primary link\";\r\n         /ip firewall connection remove [find]\r\n       /interface ovpn-client disable ovpn-out1\r\n       :log info \"Disabling interface ovpn-out1 to reset connection\"\r\n        /delay 1\r\n        :log info \"Re-enabling interface ovpn-out1..\"\r\n        /interface ovpn-client enable ovpn-out1 \r\n      /ip route set [find comment=\"Primary(OpenVPN)\"] distance=1\r\n      /ip route set [find comment=\"Primary Default Route\" distance=3] distance=1\r\n:log info \"Connection Table has been reset..\"   \r\n} \r\n\r\n"
